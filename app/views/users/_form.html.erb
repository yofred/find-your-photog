    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label "Password" %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label "Password confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label "Username" %><br />
    <%= f.text_field :handle %>
  </div>
  <div class="field">
    <%= f.label "Short bio" %><br />
    <%= f.text_area :bio %>
  </div>
