<%= form_for(@photo, html: { multipart: true }) do |f| %>
  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% @photo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <p>
      <b>Select Album:</b>
      <%= select("photo", "gallery_id", @galleries.collect {|gallery| [ gallery.title, gallery.id ] }, { :include_blank => true }) %>
    </p>
  </div>
  
  <div class="field">
    <p>
      <%= f.file_field :photo %>
    </p>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>