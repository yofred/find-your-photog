<!DOCTYPE html>
	<head>
		<title>Find your wedding photographer!</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
	</head>
	<body>
		<div class="container">
			<div class="cbp-af-header">
				<div class="cbp-af-inner">
					<h1><%= link_to("LOGO", :root) %></h1>
					<nav>
						<a href="<%= photographers_path %>">photographers</a>
            <a href="<%= users_path %>">users</a>
						<a href="#">galleries</a>
            <% if current_user %>
              <%= link_to "me", user_path(current_user.id) %>
              <%= link_to "log out", login_path, :method => :delete %>
            <% elsif current_photographer %>
              <%= link_to "me", photographer_path(current_photographer.id) %>
              <%= link_to "log out", login_path, :method => :delete %>
            <% else %>
              <%= link_to "log in", login_path %>
            <% end %>
					</nav>
				</div>
			</div>

			<header class="clearfix">
				
			</header>	
			<div class="main">
			
      <section>
      <div>


<%= yield %>


      </div>
      </section>
		  </div>
	</body>
</html>